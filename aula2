{
	public static void main(String[] args) {
	    Scanner teclado = new Scanner (System.in);
	    System.out.println("cadastre o produto");
	    String produto = teclado.next();
	    System.out.println("Informe a quantidade");
	    int quantidade = teclado.nextInt();
	    System.out.println("Informe o preço");
	    float preco = teclado.nextFloat();
	    teclado.close();


	}
}
///

import java.util.Scanner;
public class Main
{
	public static void main(String[] args) { 
	    Scanner teclado  = new Scanner (System.in);
	    
		System.out.println("Digite o primeiro mes: ");
	int n1 = teclado.nextInt();
	
		System.out.println("Digite o segundo mes: ");
	int n2 = teclado.nextInt();
	
		System.out.println("Digite o terceiro mes: ");
	int n3 = teclado.nextInt();
		
	int soma=n1+n2+n3;
	int vmd= (soma/3)/25;
		
		System.out.println("A venda media diaria é de:" +vmd);
	
	    System.out.println("Digite o TR:");
	int tr= teclado.nextInt();
	int emin= tr*vmd;
	
	    System.out.println("estoque minimo diario:" +emin);
	    
	    System.out.println("Digite o lote de repeticao:");
	    int ir= teclado.nextInt();
	    int emax= ir*emin;
	    System.out.print("o estoque maximo:" +emax);
	    
		
	}
}
