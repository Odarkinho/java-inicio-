public class Main {
    public static void main(String[] args) {

        double x = -2;
     
     double total1 = 2 *x + 5 *x - 10 *x - (-x -20) + 40*x;
     double total2 = 8 *x + 5 + 30/x - 20*x -(x- 5*x -10*x);
     double total3 = 100 *x + 5*x + x + x/8 - 85*x - 22*x;
     double total4 = 10/x + 8*x - 12*x;
     
      System.out.printf("a) Resultado:%.0f \n ", total1);
      System.out.printf("b) Resultado: %.0f \n ", total2);
      System.out.printf("c) Resultado: %.0f \n  ", total3);
      System.out.printf("c) Resultado: %.0f \n  ", total4);
      
        
    }
}
