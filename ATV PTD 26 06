import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
   Scanner teclado  = new Scanner (System.in);
   
float media1 = (8 + 9 + 7)/3;
float media2 = (4 + 5 + 6)/3;
float soma = media1 + media2;
double medias = (media1 + media2)/2;

System.out.println("media de 9,8 e 7: " +media1);
System.out.println("media de 4,5 e 6: " +media2);
System.out.println("soma das medias: " +soma);
System.out.printf("media das medias: %.2f ", medias);


 }

}
